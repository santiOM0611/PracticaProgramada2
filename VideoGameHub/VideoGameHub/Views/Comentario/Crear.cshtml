@model VideoGameHub.Models.ComentarioViewModel
@{
    ViewData["Title"] = "Agregar Comentario";
}

<div class="container mt-4">

    <h2 class="mb-4">Agregar Comentario</h2>

    @if (Model.Videojuego != null)
    {
        <div class="alert alert-info">
            <strong>Videojuego:</strong> @Model.Videojuego.Titulo
        </div>
    }

    <form asp-action="Guardar" asp-controller="Comentario" method="post" class="card p-4 shadow-sm">

        <input type="hidden" asp-for="VideojuegoId" />

        <div class="mb-3">
            <label asp-for="TextoComentario" class="form-label">Comentario</label>
            <textarea asp-for="TextoComentario"
                      class="form-control"
                      rows="4"
                      placeholder="Escribe tu opinión sobre el juego..."></textarea>
            <span asp-validation-for="TextoComentario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Valoracion" class="form-label">Valoración (1-5 estrellas)</label>
            <select asp-for="Valoracion" class="form-select">
                <option value="">Seleccione</option>
                <option value="1">⭐ 1 - Muy malo</option>
                <option value="2">⭐⭐ 2 - Malo</option>
                <option value="3">⭐⭐⭐ 3 - Regular</option>
                <option value="4">⭐⭐⭐⭐ 4 - Bueno</option>
                <option value="5">⭐⭐⭐⭐⭐ 5 - Excelente</option>
            </select>
            <span asp-validation-for="Valoracion" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Detalle"
               asp-controller="Videojuego"
               asp-route-id="@Model.VideojuegoId"
               class="btn btn-outline-secondary">
                Cancelar
            </a>

            <button type="submit" class="btn btn-success">
                Publicar comentario
            </button>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}