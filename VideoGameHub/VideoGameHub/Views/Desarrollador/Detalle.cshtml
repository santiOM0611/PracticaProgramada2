@model VideoGameHub.Models.Desarrollador

@{
    ViewData["Title"] = "Detalle del Desarrollador";
}

<h2 class="mb-3">Detalle del Desarrollador</h2>

<div class="card shadow" style="max-width: 800px;">
    <div class="card-body">
        <h4 class="card-title"> @Model.Nombre</h4>

        <p class="card-text">
            <strong>País:</strong> @Model.Pais <br />
            <strong>Año de Fundación:</strong> @Model.AnoFundacion <br />
            @if (!string.IsNullOrEmpty(Model.SitioWeb))
            {
                <strong>Sitio Web:</strong>
                <a href="@Model.SitioWeb" target="_blank">@Model.SitioWeb</a>

                <br />
            }
        </p>

        <hr />

        <h5>Videojuegos Desarrollados (@Model.Videojuegos.Count)</h5>

        @if (Model.Videojuegos.Any())
        {
            <div class="list-group mb-3">
                @foreach (var videojuego in Model.Videojuegos.OrderBy(v => v.Titulo))
                {
                    <a asp-controller="Videojuego"
                       asp-action="Detalle"
                       asp-route-id="@videojuego.Id"
                       class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">@videojuego.Titulo</h6>
                            <small>$@videojuego.Precio.ToString("N2")</small>
                        </div>
                        <p class="mb-1">
                            <span class="badge bg-primary">@videojuego.Genero</span>
                            <span class="badge bg-secondary">@videojuego.Plataforma</span>
                        </p>
                    </a>
                }
            </div>
        }
        else
        {
            <p class="text-muted">Este desarrollador no tiene videojuegos registrados aún.</p>
        }

        <a asp-action="Index" class="btn btn-secondary">
            Volver al listado
        </a>
    </div>
</div>