@model VideoGameHub.Models.Desarrollador

@{
    ViewData["Title"] = "Editar Desarrollador";
}

<h2 class="mb-3">Editar Desarrollador</h2>

<form asp-action="Editar"
      asp-route-id="@Model.Id"
      method="post"
      class="row g-3">

    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Pais" class="form-label">País</label>
        <input asp-for="Pais" class="form-control" />
        <span asp-validation-for="Pais" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="AnoFundacion" class="form-label">Año de Fundación</label>
        <input asp-for="AnoFundacion" type="number" class="form-control" />
        <span asp-validation-for="AnoFundacion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="SitioWeb" class="form-label">Sitio Web (opcional)</label>
        <input asp-for="SitioWeb" class="form-control" />
        <span asp-validation-for="SitioWeb" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            Guardar cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}